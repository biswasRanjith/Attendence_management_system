<style>
body{
    background-color: #E4E5E7;
}

</style>
<script>
    $(document).ready(function(){
    $('form').submit(function(){
        if($('#pswrd').val()==$('#cnfirm').val()){
            return true;
        }
        else{
            $("#alert").show();
            return false;
        }
    });
});
</script>

<div class="container m-5">

    <form class="w-50 mx-auto" method="post">
        <legend class="text-center mb-5"><h2>Reset Password</h2></legend>
        <p id="alert" class='mb-5' style="color: red; display:none; text-align:center">New Password and Reset Password fields do not match!!</p>
        <label for="pswrd" class="control-label mb-3 h5">New Password:</label>
        <div class="input-group mb-5">
            <input type="password" class="form-control" name="password" id="pswrd" placeholder="New Password" required autofocus/>
        </div>
        <label for="cnfirm" class="control-label mb-3 h5">Confirm Password:</label>
        <div class="input-group mb-5">
            <input type="password" class="form-control" name="confirm" id="cnfirm" placeholder="Confirm Password" required/>
        </div>
        <input type="submit" class="btn btn-block btn-primary" value="Update Password">
    </form>

</div>