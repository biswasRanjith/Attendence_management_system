        <script>
                $(document).ready(function(){
                  $("#b0").click(function(){
                    
                    $.post("http://localhost:2019/trainee/api/fdbs",
                    {
                        Batch: $(".ebatch").val(),
                        Id: $(".eid").val(),
                        Subject_name:$(".esbj_nm").val(),
                        Experience:$(".eexpr:checked").val(),
                        Feedback:$("#efdbk").val()
                    },
                    function(data, status)
                    {
                          alert("Status: " + status);
                    });
                  });
                });
                </script>
